<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Gino Messmer</Authors>
    <Company>Gino Messmer</Company>
    <Description>A simple drop-in event bus solution for .NET Core built on top of RabbitMQ and MediatR</Description>
    <PackageProjectUrl>https://github.com/ginomessmer/rabbus</PackageProjectUrl>
    <RepositoryUrl>https://github.com/ginomessmer/rabbus</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Logging" Version="2.2.0" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.2" />
    <PackageReference Include="RabbitMQ.Client" Version="5.1.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Rabbus.Abstractions\Rabbus.Abstractions.csproj" />
  </ItemGroup>

</Project>
